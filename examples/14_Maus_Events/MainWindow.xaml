<Window x:Class="Maus_Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maus_Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="gridLayout" MouseMove="Grid_MouseMove_1" MouseDown="Grid_MouseDown_1" Background="WhiteSmoke">
        <Label Content="Mauskoordinaten:" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" />
        <Label Content="X: " HorizontalAlignment="Left" Margin="121,21,0,0" VerticalAlignment="Top" />
        <Label x:Name="lblX" Content="Label" HorizontalAlignment="Left" Margin="149,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.447,-0.115" />
        <Label Content="Y:" HorizontalAlignment="Left" Margin="121,47,0,0" VerticalAlignment="Top" />
        <Label x:Name="lblY" Content="Label" HorizontalAlignment="Left" Margin="149,47,0,0" VerticalAlignment="Top" />
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="421,21,0,0" VerticalAlignment="Top" Width="75" Click="btnReset_Click" />
    </Grid>
</Window>